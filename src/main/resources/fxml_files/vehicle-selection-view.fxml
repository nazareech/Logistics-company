<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Text style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Select Your Vehicles" />
    <Text style="-fx-font-size: 14px;" text="Choose up to three vehicles for your shipment. Select vehicles from the table below." />

    <TableView fx:id="vehicleTable" style="-fx-font-size: 14px;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="modelColumn" prefWidth="150" text="Vehicle Model" />
            <TableColumn fx:id="manufacturerColumn" prefWidth="150" text="Manufacturer" />
            <TableColumn fx:id="weightColumn" prefWidth="100" text="Weight (lbs)" />
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Label fx:id="selectionCountLabel" style="-fx-font-size: 14px;" text="Selected: 0/3" />
        <Button fx:id="submitButton" disable="true" style="-fx-font-size: 14px;" text="Submit" />
    </HBox>

</VBox>
